.detailContainer {
  display: flex;
  flex-direction: column;
}

.headImage {
  width: 100%;
  height: 460rpx;
}

.avatarContainer {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatarImage {
  width: 64rpx;
  height: 64rpx;
  /* 文本垂直居中 */
  vertical-align: middle;
}

.name {
  color: #666;
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  /* 文本垂直居中 */
  vertical-align: middle;
}

.date-info  {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
   /* 文本垂直居中 */
  vertical-align: middle;
}

.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  /* 字体间距 */
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.circle-images{
  float:right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.share , .collect{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}
/* 横线 */
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.content{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
}

/* 播放器样式 */
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  /* 居中经典方式 */
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  /* 透明度 */
  opacity: 0.6;
}